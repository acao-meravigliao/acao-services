<aside class="component menu is-hidden-touch">
  <p class="menu-label">
    <LinkTo @route="authen.index">
      {{t "menu.home"}}
    </LinkTo>
  </p>

  <ul class="menu-list">
    {{#if @currentRenewIsOpenAndNeeded}}
      <li>
        <LinkTo @route="authen.renew-membership" @model={{@currentYear.year}}>{{t "menu.renew_membership"}} {{@currentYear.year}}</LinkTo>
      </li>
    {{/if}}
    {{#if @nextRenewIsOpenAndNeeded}}
      <li>
        <LinkTo @route="authen.renew-membership" @model={{@nextYear.year}}>{{t "menu.renew_membership"}} {{@nextYear.year}}</LinkTo>
      </li>
    {{/if}}
    <li>
      <LinkTo @route="authen.invoices" class="item teal">
        {{t "menu.invoices"}}
        {{#if @pendingInvoices}}
          <div class="ui red label">{{@pendingInvoices.length}}</div>
        {{/if}}
      </LinkTo>
    </li>

    <li>
      <LinkTo @route="authen.payments" class="item teal">
        {{t "menu.payments"}}
        {{#if @pendingPayments}}
          <div class="ui red label">{{@pendingPayments.length}}</div>
        {{/if}}
      </LinkTo>
    </li>

    <p class="menu-label">
      {{t "menu.roster"}}
    </p>

    {{#if @rosterCurStatus.can_select_entries}}
      <li>
        <LinkTo @route="authen.roster.select" @model={{@rosterCurStatus.year}}>
          Selezione {{@rosterCurStatus.year}}
          {{#unless @rosterCurStatus.needed_entries_present}}
            <div class="ui medium red circular label">&nbsp;&nbsp;<i class="exclamation icon" /></div>
          {{/unless}}
        </LinkTo>
      </li>
    {{/if}}
    {{#if @rosterNextStatus.can_select_entries}}
      <li>
        <LinkTo @route="authen.roster.select" @model={{@rosterNextStatus.year}}>
          Selezione {{@rosterNextStatus.year}}
          {{#unless @rosterNextStatus.needed_entries_present}}
            <div class="ui medium red circular label">&nbsp;&nbsp;<i class="exclamation icon" /></div>
          {{/unless}}
        </LinkTo>
      </li>
    {{/if}}
    <li><LinkTo @route="authen.roster.days"> Tutti i turni </LinkTo></li>
    <li><LinkTo @route="authen.roster.today"> Turni di oggi </LinkTo></li>
  </ul>


