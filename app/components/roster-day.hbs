<div class="roster-day">
  <div class="date-block {{if @day.high_season "high-season" "low-season"}}">
    <div class="date">
      {{format-date @day.date "ddd"}}<br />
      {{format-date @day.date "D/M"}}
    </div>
  </div>
  <div class="entries">
    {{#each this.sorted_entries as |entry|}}
      <div class="entry">• {{entry.person.first_name}} {{entry.person.last_name}}</div>
    {{/each}}

    {{#if @show_slots}}
      {{#each this.missing_entries}}
        <div class="entry empty">• &nbsp;</div>
      {{/each}}
    {{/if}}
  </div>
</div>
