{{page-title "Tutti i turni di linea"}}
<div class="container">
  <div class="box">
    <button class="button"  {{on "click" this.go_prev}}>
      <span class="icon is-large">
        <FaIcon @icon="arrow-left-long" />
      </span>
      <span>
        {{this.prev_year}}
      </span>
    </button>

    {{this.current_year}}

    <button class="button" {{on "click" this.go_next}}>
      <span class="icon is-large">
        <FaIcon @icon="arrow-right-long" />
      </span>
      <span>
        {{this.next_year}}
      </span>
    </button>
  </div>

  <div class="box">
    {{#if this.model}}
      <div class="cards">
      {{#each this.sortedFilteredRosterDays as |day|}}
        <RosterDay @day=day @showSlots=showSlots />
      {{/each}}
      </div>
    {{else}}
      <div class="notification is-info">
        Non ci sono giornate di linea nel {{this.current_year}}
      </div>
    {{/if}}
  </div>

</div>
