  {{#link-to 'today-roster' class="item"}} Turni di oggi {{/link-to}}
{{/ui-sidebar}}

<!-- height:1px;-->
  <div class="pusher main content" style="background-color: #FFF;">
    {{outlet}}
  </div>
</div>
