{{head-layout}}
<div class="ui fixed inverted main menu">
  {{#if session.isAuthenticated}}
    <a class="launch icon item sidebar-toggle" {{action 'sidebarToggle' 'main-sidebar'}}>
      <i class="sidebar icon"></i>
    </a>
  {{/if}}

  <div class="ui breadcrumb item">
    {{#link-to 'index' class='selection'}}ACAO Servizi{{/link-to}}

    {{#each headData.titleTokens as |token|}}
      <span class="divider">/</span>
      <div class="active selection">{{token}}</div>
    {{/each}}
  </div>

  {{#if session.isAuthenticated}}
    <div class="right item">
      {{#if cart.items}}
        {{#link-to 'shop.cart' class="ui small button"}}
          <i class="cart icon"></i>
          {{if cart.items.length cart.items.length ''}}
        {{/link-to}}
      {{/if}}

      <button class="ui small button" {{action 'logout'}}>Logout</button>
    </div>
  {{else}}
<!--    <div class="right item">
      {{#link-to 'login' class="ui primary button" tagName="button"}}Login{{/link-to}}
    </div>-->
  {{/if}}

</div>
<div id="sidebar-context">
{{#ui-sidebar class="ui left vertical inverted menu tablet or lower hidden" id="main-sidebar" context="#sidebar-context"}}
  {{#link-to 'index' class="item"}} Home {{/link-to}}

