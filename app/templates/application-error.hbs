{{page-title (t "application_error.page_title")}}
<div class="error-modal modal is-active">
  <div class="modal-background"></div>
  <div class="modal-content">
    <ExceptionDecode @ex={{this.model}} as |title detail backtrace|>
      <div class="box notification is-danger">
        <h1 class="title">{{title}}</h1>
        <div>
          {{detail}}
        </div>
        {{!--
        <pre>
          {{backtrace}}
        </pre>
        --}}
      </div>
    </ExceptionDecode>
  </div>
</div>
