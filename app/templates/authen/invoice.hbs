{{page-title (t "invoice.page_title")}}
<div class="ui container">
  <div class="ui segment">
  <div>
    <h1>{{t "invoice.invoice"}} {{model.invoice.identifier}}
    </h1>
    Data: {{format-date this.model.invoice.created_at "DD-MM-YYYY HH:mm:ss"}}<br />
  </div>

  <table class="invoice ui celled table">
    <thead>
      <tr>
        <th>Descrizione</th>
        <th>Costo</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.model.invoice.details key="@index" as |detail|}}
      <tr>
        <td>{{detail.descr}}{{#if detail.specific_data}} - {{detail.specific_data}}{{/if}}</td>
        <td class="price">{{format-number detail.price 2 "€"}}</td>
      </tr>
      {{/each}}
    </tbody>
    <tfoot>
      <tr>
        <th>Totale</th>
        <td class="total price">{{format-number this.model.invoice.total 2 "€"}}</td>
      </tr>
    </tfoot>
  </table>
  </div>

