{{page-title "Volo"}}
<div class="container page authen-flight">
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <FaIcon @icon="plane-departure" @size="3x" />
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4">
            <h1>Volo <strong>{{this.model.source_id}}</strong></h1>
          </p>
          <p class="subtitle is-6">
            Decollo:
            {{format-time this.model.takeoff_time format="timestamp_nosecs"}}
            {{#if this.model.takeoff_airfield}}
              {{this.model.takeoff_airfield.icao_code}} - {{this.model.takeoff_airfield.name}}

              {{!--
              <LinkTo @route="authen.airfield" @model={{this.model.takeoff_airfield}}>
                {{this.model.takeoff_airfield.name}}
              </LinkTo>
              --}}
            {{else}}
              {{this.model.takeoff_location_raw}}
            {{/if}}

            <br />
            Atterraggio:
            {{format-time this.model.landing_time format="timestamp_nosecs"}}
            {{#if this.model.landing_airfield}}
              {{this.model.landing_airfield.icao_code}} - {{this.model.landing_airfield.name}}

              {{!--
              <LinkTo @route="authen.airfield" @model={{this.model.landing_airfield}}>
                {{this.model.landing_airfield.name}}
              </LinkTo>
              --}}
            {{else}}
              {{this.model.landing_location_raw}}
            {{/if}}
          </p>
        </div>
      </div>

      <div class="content">
        <div class="grid">
          <div class="cell">
            Aeromobile:
              <strong>
                {{#if this.is_aircraft_mine}}
                  <LinkTo @route="authen.aircraft" @model={{this.model.aircraft.id}}>
                    {{this.model.aircraft_reg}}
                  </LinkTo>
                {{else}}
                  {{this.model.aircraft_reg}}
                {{/if}}
              </strong>
              <br />

            Pilota: <strong>{{this.model.pilot1_name}}
              {{#if this.model.pilot1_role}}({{this.model.pilot1_role}}){{/if}}
              </strong><br />

            {{#if this.model.pilot2_role}}
              Passeggero:
                <strong>{{this.model.pilot2_name}}
                {{#if this.model.pilot2_role}}({{this.model.pilot2_role}}){{/if}}
                </strong><br />
            {{/if}}

            Durata: <strong>{{format-duration this.model.duration}}</strong><br />

            {{#if this.model.towed_by}}
              Trainato da:
              <LinkTo @route="authen.flight" @model={{this.model.towed_by}}>
                {{this.model.towed_by.aircraft_reg}}
              </LinkTo>
              <br />
            {{/if}}
            {{#if this.model.towing}}
              Trainando:
              <LinkTo @route="authen.flight" @model={{this.model.towing}}>
                {{this.model.towing.aircraft_reg}}
              </LinkTo>
              <br />
            {{/if}}

            {{#if this.model.launch_type}}
              Lancio: <strong>{{this.model.launch_type}}</strong><br />
            {{/if}}

            Volo Istruzione: <strong>{{if this.model.instruction_flight "sì" "no"}}</strong><br />
            Skill Test: <strong>{{if this.model.skill_test "sì" "no"}}</strong><br />
            Proficiency check: <strong>{{if this.model.proficiency_check "sì" "no"}}</strong><br />
            Maintenance check: <strong>{{if this.model.maintenance_check "sì" "no"}}</strong><br />

            {{#if this.model.purpose}}
              Scopo: <strong>{{this.model.purpose}}</strong><br />
            {{/if}}

            {{#if this.model.acao_quota}}
              Quota: <strong>{{this.model.acao_quota}}</strong><br />
            {{/if}}

            Bollini: <strong>{{this.model.acao_bollini_volo}}</strong><br />
            Tipo Volo: <strong>{{this.model.acao_tipo_volo_club}}</strong><br />
          </div>

          {{#if this.model.token_transactions}}
            <div class="cell">
              Movimenti bollini:
              <table class="table">
                <thead>
                  <tr>
                    <th>Data/Ora</th>
                    <th>Descrizione</th>
                    <th>Ammontare</th>
                  </tr>
                </thead>

                <tbody>
                  {{#each this.sorted_token_transactions key="id" as |item|}}

                  <tr>
                    <td>
                      {{format-time item.recorded_at format="timestamp"}}
                    </td>
                    <td>
                      {{item.descr}}
                    </td>
                    <td class="price">
                      {{format-number item.amount minimumFractionDigits=1 maximumFractionDigits=1}}
                    </td>
                    <td>
                      <LinkTo @route="authen.token.transaction" @model={{item.id}}>
                        <FaIcon @icon="arrow-up-right-from-square" />
                      </LinkTo>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>

        {{!--
            <LinkTo @route="authen.flight" @model={{this.model.towing}}>
              {{this.model.towing.aircraft_reg}}
            </LinkTo>
        --}}
          </div>
        {{/if}}

      </div>
      {{!--
        <div class="ui segment" style="height: 600px">
          {{#if this.model.takeoff_location.latlng}}
            {{#leaflet-map center=model.takeoff_location.latlng zoom=11 class="flight-map" as |layers|}}
              {{layers.tile url="https://stamen-tiles-{s}.a.ssl.fastly.net/terrain/{z}/{x}/{y}.png" maxZoom=13}}
              {{#layers.marker location=model.takeoff_location.latlng title="Decollo"}}
                {{#popup-layer}}
                  <b>Decollo</b><br />
                  {{model.takeoff_location.full_address}}
                  {{model.takeoff_location.lat}},{{model.takeoff_location.lng}}
                {{/popup-layer}}
              {{/layers.marker}}
              {{#layers.marker location=model.landing_location.latlng title="Atterraggio"}}
                {{#popup-layer}}
                  <b>Atterraggio</b><br />
                  {{model.takeoff_location.full_address}}
                  {{model.takeoff_location.lat}},{{model.takeoff_location.lng}}
                {{/popup-layer}}
              {{/layers.marker}}
            {{/leaflet-map}}
          {{/if}}
      --}}
      </div>
    </div>
  </div>
</div>
