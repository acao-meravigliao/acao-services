            {{#each model.memberships key="id" as |membership|}}
              <div class="item">{{membership.reference_year.year}}</div>
            {{/each}}
          </div>
        {{/if}}
-->

        {{#if this.myNextRosterEntries}}
          <div class="ui segment">
            Prossimi turni di linea:
            {{#each this.myNextRosterEntries as |re|}}
              {{roster-entry entry=re}}
            {{/each}}
          </div>
        {{/if}}

<!--
        {{#if model.medicals}}
          <div class="ui segment">
            Visita medica:
            {{#each this.model.medicals as |med|}}
              {{med.type}}: {{format-date this.med.valid_to "DD-MM-YYYY"}}<br />
            {{/each}}
          </div>
        {{/if}}

        {{#if this.model.licenses}}
          <div class="ui segment">
            Licenze:
            {{#each model.licenses as |lic|}}
              {{lic.type}}: {{lic.identifier}}: {{format-date this.lic.valid_to "DD-MM-YYYY"}}
            {{/each}}
          </div>
        {{/if}}
-->
      </div>
    </div>
    <div class="column">
    </div>
  </div>


