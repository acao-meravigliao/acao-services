{{page-title (t "authen.page_title")}}

<div class="container page">
  <h1 class="subtitle">Ciao {{this.session.person.first_name}}!</h1>

  {{#if this.nextRenewIsGoingToOpen}}
    <div class="message">
      <h1 class="ui header">
        L'iscrizione per l'anno {{this.nextYear.year}} non è ancora aperta,
        aprirà {{format-date-from-now this.nextYear.renew_opening_time}}
      </h1>
    </div>
  {{/if}}

  <div class="ui stackable mobile reversed equal width grid">
    <div class="column">
      <div>
        <div class="ui statistics">
          <div class="statistic">
            <div class="value">
              {{format-number this.session.person.acao_bar_credit 2 "€"}}
            </div>
            <div class="label">
              Conto bar
            </div>
          </div>
        </div>

        <div class="ui statistics">
          <div class="statistic">
            <div class="value">
              {{this.session.person.acao_bollini}}
            </div>
            <div class="label">
              Bollini
            </div>
          </div>
        </div>


<!--        {{#if this.model.memberships}}
          Socio nel:
