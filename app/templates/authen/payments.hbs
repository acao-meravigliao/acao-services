{{page-title "Pagamenti"}}
<div class="ui container">
  <table class="invoices ui selectable celled table">
    <thead>
      <tr>
        <th></th>
        <th>Data</th>
        <th>Codice</th>
        <th>Metodo</th>
        <th>Ammontare</th>
        <th>Scadenza</th>
      </tr>
    </thead>

    <tbody>
      {{#each this.model key="id" as |data|}}

      <tr {{on 'click' (transition-to "authen.payment" data.id)}}>
        <td>
          <div class="ui ribbon label {{get this.stateColors data.state}}">{{data.state}}</div>
        </td>
        <td>
          {{format-date data.created_at "DD-MM-YYYY HH:mm:ss" }}
        </td>
        <td>
          {{data.identifier}}
        </td>
        <td>
          {{data.payment_method}}
        </td>
        <td class="price">
          {{numeral-format data.amount format="0.00"}} â‚¬
        </td>
        <td>
          {{if data.expires_at (format-date data.expires_at "DD-MM-YYYY")}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
