{{page-title (t "invoice.page_title")}}
<div class="container page authen-invoice">
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <FaIcon @icon="file-invoice-dollar" @size="3x" />
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4">
            <h1>{{t "invoice.invoice"}} <strong>{{this.invoice.identifier_full}}</strong></h1>
          </p>
          <p class="subtitle is-6">
          </p>
        </div>
      </div>

      <div class="content">
        <div class="grid">
          <div class="cell">
            Data: <strong>{{format-date this.invoice.document_date format="dmy"}}</strong><br />
            Destinatario: <strong>{{this.invoice.recipient}}</strong><br />
            Indirizzo: <strong>{{this.invoice.address}}</strong><br />
            Codice Fiscale: <strong>{{this.invoice.codice_fiscale}}</strong><br />
            Partita IVA: <strong>{{this.invoice.partita_iva}}</strong><br />
            Email: <strong>{{this.invoice.email}}</strong><br />
            Pagamento: <strong>{{t (concat "payment.methods." this.invoice.payment_method)}}</strong><br />
          </div>
          <div class="cell">
            <table class="invoice table">
              <thead>
                <tr>
                  <th>Numero</th>
                  <th>Descrizione</th>
                  <th>Prezzo unitario</th>
                  <th>Prezzo netto</th>
                  <th>IVA</th>
                  <th>Totale</th>
                </tr>
              </thead>
              <tbody>
                {{#each this.invoice.sorted_details key="@index" as |detail|}}
                <tr>
                  <td>{{detail.count}}</td>
                  <td>{{detail.descr}}{{#if detail.specific_data}} - {{detail.specific_data}}{{/if}}</td>
                  <td class="price">{{format-number detail.single_amount style="currency" currency="EUR"}}</td>
                  <td class="price">{{format-number detail.untaxed_amount style="currency" currency="EUR"}}</td>
                  <td class="price">{{format-number detail.vat_amount style="currency" currency="EUR"}}</td>
                  <td class="price">{{format-number detail.total_amount style="currency" currency="EUR"}}</td>
                </tr>
                {{/each}}
              </tbody>
              <tfoot>
                <tr>
                  <th colspan=5>Totale</th>
                  <td class="total price">{{format-number this.invoice.amount style="currency" currency="EUR"}}</td>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
