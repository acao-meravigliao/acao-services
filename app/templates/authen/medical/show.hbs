{{page-title "Visita Medica"}}

<div class="container page authen-aircraft">
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <FaIcon @icon="staff-snake" @size="3x" />
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4">
            Visita medica {{this.medical.type}}
          </p>
          <p class="subtitle is-6">
            {{this.medical.identifier}}
          </p>
        </div>
      </div>

      <div class="content">
        Rilasciata Il: <strong>{{format-date this.medical.isued_at}}</strong><br />
        Valida Al: <strong>{{format-date this.medical.valid_to}}</strong><br />
      </div>
    </div>
  </div>
</div>
