<div class="pagination-controls">
  <div class="page-info">
    {{table.paginationData.pageStart}} - {{table.paginationData.pageEnd}} of {{table.paginationData.totalRows}}
  </div>

  <button class="ui button previous" disabled={{or table.paginationData.isFirstPage table.isLoading}} onclick={{action table.actions.previousPage}}>
    <i class="angle-left icon"></i>
  </button>

  <button class="ui button next" disabled={{or table.paginationData.isLastPage table.isLoading}} onclick={{action table.actions.nextPage}}>
    <i class="angle right icon"></i>
  </button>
</div>
